bases:
- environments.yaml
---
repositories:
- name: common
  url: https://bjw-s-labs.github.io/helm-charts


helmfiles:
  - path: apps/common/helmfile.yaml.gotmpl
    values:
    - environments/{{ .Environment.Name }}/values.yaml
    - environments/{{ .Environment.Name }}/images.yaml
  - path: apps/unifi-client/helmfile.yaml.gotmpl
    values:
    - environments/{{ .Environment.Name }}/values.yaml
    - environments/{{ .Environment.Name }}/images.yaml
  - path: apps/unifi-ipmanager/helmfile.yaml.gotmpl
    values:
    - environments/{{ .Environment.Name }}/values.yaml
    - environments/{{ .Environment.Name }}/images.yaml
